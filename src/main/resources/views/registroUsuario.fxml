<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.PruebaSimed2.controllers.RegistroUsuarioController"
      spacing="15"
      prefWidth="500"
      prefHeight="600">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <!-- Título -->
    <Label text=" REGISTRO DE NUEVO USUARIO" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    <Label fx:id="lblMensaje" text="Complete el formulario para registrar nuevo usuario"
           style="-fx-text-fill: #2c3e50; -fx-wrap-text: true;"/>

    <!-- Formulario -->
    <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #f8f9fa; -fx-background-radius: 10;">

        <Label text="Nombre Completo:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtNombreCompleto" promptText="Ej: Dr. Juan García Pérez"/>

        <Label text="Email:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtEmail" promptText="Ej: juan.garcia@hospital.com"/>

        <Label text="Nombre de Usuario:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtUsername" promptText="Ej: juan.garcia"/>

        <Label text="Rol:" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="cbRol" promptText="Seleccione un rol"/>

        <!-- CAMPOS NUEVOS PARA MÉDICOS -->
        <VBox fx:id="vboxDatosMedico" visible="false" spacing="10" style="-fx-padding: 10; -fx-background-color: #e8f4fd; -fx-background-radius: 5;">
            <Label text="DATOS PROFESIONALES (MÉDICOS)" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <Label text="Cédula Profesional:*" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtCedulaProfesional" promptText="Ej: 12345678"/>

            <Label text="Nota: Estos datos aparecerán en los combobox del sistema"
                   style="-fx-text-fill: #7f8c8d; -fx-font-size: 11; -fx-wrap-text: true;"/>
        </VBox>

        <!-- Campo universidad (solo para médico especialista) -->
        <VBox fx:id="vboxUniversidad" visible="false" managed="false" spacing="5">
            <Label text=" Universidad:" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtUniversidad" promptText="Nombre de la universidad"/>
        </VBox>

        <!-- Campo cédula para jefatura de urgencias -->
        <VBox fx:id="vboxJefaturaUrgencias" visible="false" managed="false" spacing="5">
            <Label text=" Cédula Profesional:" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtCedulaJefatura" promptText="Cédula profesional"/>
        </VBox>

    </VBox>

    <!-- Botones -->
    <HBox spacing="10">
        <Button text=" Registrar Usuario" onAction="#handleRegistrarUsuario"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text=" Volver" onAction="#handleVolver"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
    </HBox>

</VBox>