<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="500" prefHeight="400"
            style="-fx-background-color: white;"
            fx:controller="com.PruebaSimed2.controllers.CambioPasswordController">

    <center>
        <VBox alignment="CENTER" spacing="25" style="-fx-padding: 40;">
            <!-- Título -->
            <VBox alignment="CENTER" spacing="8">
                <Text text="Cambio de Contraseña Obligatorio"
                      style="-fx-fill: #2c3e50; -fx-font-size: 24; -fx-font-weight: bold;"/>
                <Text text="Por seguridad, debe cambiar su contraseña para continuar"
                      style="-fx-fill: #7f8c8d; -fx-font-size: 14;"/>
            </VBox>

            <!-- Formulario -->
            <VBox alignment="CENTER_LEFT" spacing="20"
                  style="-fx-padding: 30; -fx-background-color: #f8f9fa; -fx-background-radius: 15;">

                <Label text="Nueva Contraseña" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <PasswordField fx:id="txtNuevaPassword" promptText="Mínimo 8 caracteres"
                               style="-fx-pref-width: 320; -fx-pref-height: 45; -fx-background-radius: 8;"/>

                <Label text="Confirmar Contraseña" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <PasswordField fx:id="txtConfirmarPassword" promptText="Repita la contraseña"
                               style="-fx-pref-width: 320; -fx-pref-height: 45; -fx-background-radius: 8;"/>

                <Button text="Cambiar Contraseña e Ingresar"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-pref-width: 320; -fx-pref-height: 50; -fx-background-radius: 8; -fx-font-weight: bold;"
                        onAction="#handleCambiarPassword"/>

                <Label fx:id="lblMensaje" style="-fx-font-weight: bold; -fx-alignment: center; -fx-wrap-text: true;"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>