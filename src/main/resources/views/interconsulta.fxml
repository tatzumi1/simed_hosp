<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.PruebaSimed2.controllers.InterconsultaController"
      style="-fx-padding: 20; -fx-background-color: #f8f9fa;"
      VBox.vgrow="ALWAYS">

    <Label text="NOTA DE INTERCONSULTA MÉDICA" style="-fx-font-size:18px; -fx-font-weight:bold; -fx-text-fill:#002366;"/>

    <Label fx:id="lblFolio" text="Folio: " style="-fx-font-weight:bold;"/>

    <!-- GridPane principal que se expande -->
    <GridPane hgap="10" vgap="10" VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="10"/> <!-- Especialista -->
            <RowConstraints percentHeight="12"/> <!-- (P) - NUEVO -->
            <RowConstraints percentHeight="12"/> <!-- Síntomas (S) -->
            <RowConstraints percentHeight="22"/> <!-- Signos Vitales (O) -->
            <RowConstraints percentHeight="22"/> <!-- Diagnóstico (A)-->
            <RowConstraints percentHeight="22"/> <!-- Indicaciones (P/I)-->
        </rowConstraints>

        <!-- Especialista (fila 0) -->
        <Label text="Especialista:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight:bold;"/>
        <HBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="1">
            <ComboBox fx:id="cmbEspecialistas" promptText="Seleccionar especialista" HBox.hgrow="ALWAYS"/>
            <TextField fx:id="txtCedula" promptText="Cédula" prefWidth="120" editable="false"/>
            <TextField fx:id="txtEspecialidad" promptText="Ej: CARDIOLOGÍA" prefWidth="150"/>
        </HBox>

        <!-- (P) - NUEVO (fila 1) -->
        <Label text="P:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight:bold;"/>
        <TextArea fx:id="txtP" GridPane.rowIndex="1" GridPane.columnIndex="1"
                  promptText="Presentacion del paciente..."
                  wrapText="true" GridPane.vgrow="ALWAYS"/>

        <!-- Síntomas (fila 2) -->
        <Label text="S:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight:bold;"/>
        <TextArea fx:id="txtSintomas" GridPane.rowIndex="2" GridPane.columnIndex="1"
                  promptText="Describa los signos y síntomas del paciente..."
                  wrapText="true" GridPane.vgrow="ALWAYS"/>

        <!-- Signos Vitales (fila 3 - 22% más espacio) -->
        <Label text="O:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight:bold;"/>
        <TextArea fx:id="txtSignosVitales" GridPane.rowIndex="3" GridPane.columnIndex="1"
                  promptText="signos vitales, Exploracion fisica, resultados de laboratorio, etc."
                  wrapText="true" GridPane.vgrow="ALWAYS"/>

        <!-- Diagnóstico (fila 4 - 22% más espacio) -->
        <Label text="A:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight:bold;"/>
        <TextArea fx:id="txtDiagnostico" GridPane.rowIndex="4" GridPane.columnIndex="1"
                  promptText="Analisis, Diagnostico..."
                  wrapText="true" GridPane.vgrow="ALWAYS"/>

        <!-- Indicaciones (fila 5 - 22% más espacio) -->
        <Label text="P/I:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight:bold;"/>
        <TextArea fx:id="txtIndicaciones" GridPane.rowIndex="5" GridPane.columnIndex="1"
                  promptText="Plan, Indicaciones..."
                  wrapText="true" GridPane.vgrow="ALWAYS"/>
    </GridPane>

    <!-- Botones al final -->
    <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
        <Button text=" Guardar Temporal" fx:id="btnGuardarTemporal" onAction="#guardarTemporal"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 150;"/>
        <Button text=" Guardar Definitivo" fx:id="btnGuardarDefinitivo" onAction="#guardarDefinitivo"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-pref-width: 150;"/>
        <!--    <Button text=" Vista Previa PDF" fx:id="btnImprimir" onAction="#imprimirNota"
                    style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-pref-width: 150;"/>-->
    </HBox>
</VBox>